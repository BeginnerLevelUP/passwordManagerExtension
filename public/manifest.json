{
  "manifest_version": 3,
  "name": "PasswordManager",
  "version": "1.0.0",
  "description": "Meant To Work With PasswordManager",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "notifications",
    "storage",
    "scripting",
    "tabs",
    "activeTab",
    "alarms"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "16": "icons/icons8-password-manager-16.png",
    "32": "icons/icons8-show-password-32.png",
    "48": "icons/icons8-show-password-48.png",
    "128": "icons/password-manager-128.png"
  }
}
